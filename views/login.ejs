<% include _header %>
<link rel="stylesheet" href="/css/login.css">
<div class="container">

    <div class="login center-block col-lg-5 col-md-5 col-sm-10">
        <h2>Login to BigRed//Hacks</h2>
        <br/>
        <%
        if (error.length > 0) { %>
        <%- '<div class="alert alert-danger" role="alert">' + error[0] + '</div>';%>
        <%}%>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Email" value="<%= email || "" %>"required>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                       required>
            </div>
            <button type="submit" class="btn btn-primary center-block ">Login</button>
        </form>
        <div class="login-help">
            <p>Forgot your password? <a href="index.html">Click here to reset it</a>.</p>
        </div>

    </div>
</div>

<% include _footer %>
