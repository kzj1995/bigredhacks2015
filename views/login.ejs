<% include _header %>
<link href="/css/index.css" rel="stylesheet">
<link rel="stylesheet" href="/css/login.css">

<body>
<% include _navbar-generic %>
<div class="container">

    <div class="login center-block col-lg-5 col-md-5 col-sm-10">
        <h2>login to bigred//hacks</h2>
        <br/>
        <%
        if (messages.error) { %>
        <%- '<div class="alert alert-danger" role="alert">' + messages.error[0].toLowerCase() + '</div>';%>
        <%}%>
        <form action="/login" method="post">
            <div class="form-group">
                <label for="email">email address</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="email" value="<%= messages.email || "" %>"required>
            </div>
            <div class="form-group">
                <label for="password">password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="password"
                       required>
            </div>
            <button type="submit" class="btn btn-primary center-block ">login</button>
        </form>
        <div class="login-help">
            <p>forgot your password? <a href="/forgotpassword">click here to reset it</a>.</p>
        </div>

    </div>
</div>

<% include _footer %>
