//Generates full section header
mixin sectionHeading(name)
    .section-heading.container
        img.leaf(src="img/leaf-red.svg")
        br
        h2(style={float:left}) #{name}

block vars
    - bodyAttr = {"id":"page-top", "data-spy":"scroll", "data-target":".navbar-custom"}
block append header
