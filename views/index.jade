                    li: a(href="#about") About
                    li: a(href="#schedule") Schedule
                    li: a(href="#sponsors") Sponsors

    //- Creates a message if content exists, where type:error|success
    mixin message(content, type)
        -console.log(content)
        if content
            - var msg_class
            case type.toLowerCase()
                when "error": -msg_class = "alert-danger"
                when "success": -msg_class = "alert-success"
                default: -msg_class = "alert-success"
            .alert.float.alert-dismissible.float.fadeOut(class=msg_class, role="alert")
                button.close(type="button", data-dismiss="alert", aria-label="Close"): span(aria-hidden="true") &times;
                | #{content.toLowerCase()}

    if messages.error
        +message(messages.error[0].toLowerCase(), "error")
    if messages.success
        +message(messages.success[0].toLowerCase(), "success")

    //- Section: intro
    section#intro.intro
        .transparent
        .slogan
            h2 #[img(src="img/icon/brh-icon-beige-full.svg" height="75" width="95")] BIGRED//HACKS
            h3 be a part of something big.
            h3 Sept 18-20, 2015
            br/

            span.announcement
                h3 #[a(href="/docs/ProgramFall2015.pdf",target="_blank") Click Here for Program & Schedule]

            br

            if isUser
                case userRole
                    when "admin": a.btn.btn-red(href="/admin/dashboard") my dashboard
                    when "mentor": a.btn.btn-red(href="/admin/dashboard") my dashboard
                    default: a.btn.btn-red(href="/admin/dashboard") my dashboard
            else
